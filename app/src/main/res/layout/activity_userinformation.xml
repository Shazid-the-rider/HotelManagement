<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090340"
    tools:context=".userinformation">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userinformation"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="40dp">

        <TableRow
            android:id="@+id/titleid"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/tablelay"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview1"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="User Information"
                android:textColor="#F40000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/name_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/tablelay">

            <TextView
                android:id="@+id/textview2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/tablelay"
                android:fontFamily="monospace"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Name  :"
                android:textColor="#53FF09"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview3"

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:fontFamily="monospace"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#53FF09"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/email_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/tablelay">

            <TextView
                android:id="@+id/textview4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/tablelay"
                android:fontFamily="monospace"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Email :"
                android:textColor="#53FF09"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview5"

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:fontFamily="monospace"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#53FF09"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/key_title"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/tablelay">

            <TextView
                android:id="@+id/textview6"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/tablelay"
                android:fontFamily="monospace"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Key   :"
                android:textColor="#53FF09"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:fontFamily="monospace"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#53FF09"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintTop_toTopOf="@id/table"
        app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>